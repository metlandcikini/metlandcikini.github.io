  body.site

  - var showTags = ['Laporan KAS', 'Laporan IPL', 'Acara Warga', 'Pengurus', 'Daftar Warga' ]
  - var allTags = env.helpers.getAllTags()

    header.header-fixed

        nav.nav
          div.nav__left
            .nav__item.nav__logo
              a(href=locals.url)
                img(src=locals.logoUrl)
            .nav__item.nav__brand
              a(href=locals.url)= locals.name

          div.nav__right
            .nav__item.nav__link
              a(href=locals.url) Home
            .nav__item.nav__link
              a(href=href=locals.url+'/archive.html') Semua Artikel

            each tag in allTags
              if env.helpers.getTagHome(tag) !== undefined
                each showTag in showTags
                  if tag === showTag
                    .nav__item.nav__link
                      a(href=locals.url+env.helpers.getTagHome(tag).url)= tag

          div.nav__mobile
              div.nav__mobile-btn#menu-toggle
                  span
                  span
                  span
                  span

    aside.site__offcanvas.offcanvas.offcanvas--animated(role='aside')
      div.offcanvas__overlay
      ul

        each tag in allTags
          if env.helpers.getTagHome(tag) !== undefined
            each showTag in showTags
              if tag === showTag
                li
                  i.fa.fa-angle-double-right
                  a(href=locals.url+env.helpers.getTagHome(tag).url)= tag

        li
          i.fa.fa-angle-double-right
          a(href=href=locals.url+'/archive.html') Semua Artikel
        li
          i.fa.fa-angle-double-right
          a(href=href=locals.url) Home

    div.cover
      section.content-wrap
        block header

          div.cover__logo
            img(src=locals.logoUrl)
            h1.cover__title
              a(href=locals.url)= locals.name
            p.cover__desc= locals.description

    main#content
      div.content-wrap
        block content

    footer.footer
      div.content-wrap
        block footer

          section.footer__about
            !=contents['about.md'].html

          section.footer__copy
            p Copyright &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design

          section.footer__social
            a(href='https://github.com/metlandcikini', target='_blank')
              i.fa.fa-github
            a(href='https://metlandcikini.github.io', target='_blank')
              i.fa.fa-globe
            a(href='https://metlandcikini.github.io/stories/', target='_blank')
              i.fa.fa-rss

          section.footer__dev

    block footer_script

  script(src=locals.url+contents.js['jquery.js'].url)
  script.
    var ROOT_URL = "#{locals.url}";
  script(src=locals.url+contents.js['all-script.js'].url)
